{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "description": "Krb configuration",
  "type": "object",
  "properties": {
    "name": {
      "type": "string"
    },
    "principals": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "password": {
            "type": "string"
          },
          "value": {
            "type": "string"
          }
        },
        "required": [
          "name",
          "password"
        ]
      }
    },
    "keytabs": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "secret": {
            "type": "string"
          },
          "key": {
            "type": "string"
          },
          "principal": {
            "type": "string"
          },
          "realm": {
            "type": "string"
          }
        },
        "required": [
          "secret",
          "key",
          "principal",
          "realm"
        ]
      }
    }
  },
  "required": []
}